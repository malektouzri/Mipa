{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="content mt-3" style="width: 1100px">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Liste des catégories</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Nom</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in cats %}
                                    <tr>
                                        <td><img src="{{ asset('uploads/images/' ~ p.filename) }}" height="100" width="100" style="text-align: center;margin-left: 50px"> </td>
                                        <td>{{ p.nom }}</td>
                                        <td><a href="{{ path('modifiercat', {'id':p.id}) }}">Modifier</a></td>
                                        <td><a onclick="return myDelete()" href="{{ path('supprimercat', {'id':p.id}) }}">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">

    </div>
    <script>
        function myDelete() {
            return confirm("Etes-vous sur de vouloir supprimer cet élément?");

        }
    </script>
{% endblock %}