{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="content mt-3" >
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-8" style="width: 1200px">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Liste des commandes</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Quantité</th>
                                    <th>Produit</th>
                                    <th>Entreprise</th>
                                    <th>Etat</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in pdts %}
                                    <tr>
                                        <td>{{ p.date|date('d-m-Y') }}</td>
                                        <td>{{ p.quantite }}</td>
                                        <td>{{ p.idProduit.libelle }}</td>
                                        <td>{{ p.idUser.nomEntreprise }}</td>
                                        <td>{{ p.etat }}</td>
                                        <td><a href="{{ path('modifiercmd', {'id':p.id}) }}">Modifier</a></td>
                                        <td><a onclick="return myDelete()" href="{{ path('supprimercmd', {'id':p.id}) }}">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">

    </div>
    <script>
        function myDelete() {
            return confirm("Etes-vous sur de vouloir supprimer cet élément?");

        }
    </script>
{% endblock %}