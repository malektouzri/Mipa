{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="content mt-3" >
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-8" style="width: 1200px">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Liste des produits CHR</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Libelle</th>
                                    <th>Description</th>
                                    <th>Référence</th>
                                    <th>Prix</th>
                                    <th>Catégorie</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in pdts %}
                                    <tr>
                                        <td><img src="{{ asset('uploads/images/' ~ p.filename) }}"></td>
                                        <td>{{ p.libelle }}</td>
                                        <td>{{ p.description }}</td>
                                        <td>{{ p.reference }}</td>
                                        <td>{{ p.prix }}</td>
                                        <td>{{ p.categories.nom }}</td>
                                        <td><a href="{{ path('modifierchr', {'id':p.id}) }}">Modifier</a></td>
                                        <td><a onclick="return myDelete()" href="{{ path('supprimerchr', {'id':p.id}) }}">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">

    </div>
    <script>
        function myDelete() {
            return confirm("Etes-vous sur de vouloir supprimer cet élément?");

        }
    </script>
{% endblock %}