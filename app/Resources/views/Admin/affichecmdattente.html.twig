{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="content mt-3" style="width: 1110px">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Liste des commandes en attente</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Entreprise</th>
                                    <th>Détails</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for p in pdts %}
                                    <tr>
                                        <td>{{ p.date|date('d-m-Y') }}</td>
                                        <td>{{ p.idUser.nomEntreprise }}</td>
                                        <td><a href="{{ path('detailcmd', {'id':p.id, 'idUser':p.idUser.id}) }}">Détails</a></td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">

    </div>

{% endblock %}