{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="content mt-3" style="width: 1110px">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Liste des autres utilisateurs</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Nom Utilisateur</th>
                                    <th>Email</th>
                                    <th>Téléphone</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in pdts %}
                                    <tr>
                                        <td>{{ p.prenom }} {{ p.nom }}</td>
                                        <td>{{ p.username }}</td>
                                        <td>{{ p.email }}</td>
                                        <td>{{ p.telephone }}</td>
                                        <td><a href="{{ path('modifieruser', {'id':p.id}) }}">Modifier</a></td>
                                        <td><a onclick="return myDelete()" href="{{ path('supprimeruser', {'id':p.id}) }}">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">

    </div>
    <script>
        function myDelete() {
            return confirm("Etes-vous sur de vouloir supprimer cet élément?");

        }
    </script>
{% endblock %}