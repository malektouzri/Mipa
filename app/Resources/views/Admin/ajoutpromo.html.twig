{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1> Promotion</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active"> Promotion</li>
                        <li class="active">Ajout</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        {% for flashMessage in app.session.flashbag.get('Notice') %}
            <ul><li class="alert-success">
                    {{flashMessage}}
                </li></ul>
        {% endfor%}
        {% for flashMessage in app.session.flashbag.get('Erreur') %}
            <ul><li class="alert-danger">
                    {{flashMessage}}
                </li></ul>
        {% endfor%}
        <br/>

        <div class="content mt-3">
            <div class="col-lg-6">
                <div class="align-content-center">
                    <div class="card">
                        <div class="card-header">
                            <strong>Nouvelle Promotion</strong>
                        </div>

                        <div class="card-body card-block">
                            {{ form_start(form) }}
                            <form method="post" action="{{ path('ajoutpromo') }}">
                                {{ form_errors(form) }}
                                <div class="form-group">
                                    {{ form_label(form.pourcentage,'*Pourcentage:') }}
                                    {{ form_errors(form.pourcentage) }}
                                    {{ form_widget(form.pourcentage) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.description,'*Description:') }}
                                    {{ form_errors(form.description) }}
                                    {{ form_widget(form.description) }}
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">*Date Début:</label></div>
                                    <div class="col-12 col-md-9"><input type="date" id="dateDebut" name="dateDebut"  class="form-control" required></div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">*Date Fin:</label></div>
                                    <div class="col-12 col-md-9"><input type="date" id="dateFin" name="dateFin"  class="form-control" required></div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="select" class=" form-control-label">*Produits CHR:</label></div>
                                    <div class="col-12 col-md-9">
                                        <select name="produitchr" id="produitchr" class="form-control" >
                                            <option value="" ></option>
                                            {% for c in chr %}
                                                    <option value="{{ c.id }}" >{{ c.libelle }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="select" class=" form-control-label">*Produits GMS:</label></div>
                                    <div class="col-12 col-md-9">
                                        <select name="produitgms" id="produitgms" class="form-control" >
                                            <option value="" ></option>
                                            {% for g in gms %}
                                                <option value="{{ g.id }}" >{{ g.libelle }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>


                                <div class="card-footer">
                                    {{ form_rest(form) }}

                                    <input type="submit" value="Valider"  name="valider" class="btn btn-success btn-sm">

                                    <input type="reset" value="Réinitialiser" class="btn btn-danger btn-sm">
                                </div>

                            </form>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}